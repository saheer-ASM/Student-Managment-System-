<Window x:Class="Student_Management_System.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Management_System"
        mc:Ignorable="d"
        Title="Login - College Management System"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#2c3e50">

    <Grid>
        
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#34495e" Offset="0.1"/>
                <GradientStop Color="#2c3e50" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        
        <TextBlock Text="Infinity Science Academy" 
                   Foreground="White" FontSize="26" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,20,0,0"/>

        
        <Image Source="C:\Users\MOHAMED SHAHEER\Desktop\NEW\Student MAnagment Sytem\Images\logo.jpg"
               Height="100" Width="100"
               HorizontalAlignment="Center" VerticalAlignment="Top"
               Margin="0,60,0,0"/>

        
        <Border Background="White" Width="380" Height="300" CornerRadius="10" Margin="0,180,0,0">

            <StackPanel Margin="20" >
                
                <TextBlock Text="Login to Your Admin Account" 
                           FontSize="18" FontWeight="Bold" Foreground="#2c3e50"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Username:" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                    <TextBox Name="txtUsername" Width="320" Height="35" Margin="0,5,0,10" Padding="5"
                         BorderBrush="Gray" BorderThickness="1" FontSize="14" />
                

                <TextBlock Text="Password:" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                <PasswordBox Name="txtPassword" Width="320" Height="35" Margin="0,5,0,15" Padding="5"
                             BorderBrush="Gray" BorderThickness="1" FontSize="14"/>

                <Button Content="Login" Width="320" Height="40" Background="#2c3e50" Foreground="White"
                        FontSize="16" FontWeight="Bold" BorderBrush="Transparent"
                        Margin="0,10,0,0" Click="Loggin_Button"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
